$hacker-blue = #004EFB

.become-a-sponsor {
  .sponsor-email__container a {
    padding 12px

    color $hacker-blue

    border-color $hacker-blue
    border-bottom-width 7px
    border-style solid
  }

  .sponsor-paragraph__container {
    .sponsor-paragraph__title {
      font-size 44px
      line-height 1
      font-weight bold
      color $hacker-blue
    }

    .sponsor-paragraph__text {
      color #000000
      font-size 44px
      line-height 1
      font-weight bold
      margin-bottom 60px
    }
  }

  .sponsor-image-cloud__container {
    .sponsor-image-cloud__image {
      width calc(100vw - 200px)
    }
  }
}

