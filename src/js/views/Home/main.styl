$fancy-font-blue = #004EFB;
$footer-height-lg = 100px;

body
  min-height 100%

.home {
  position: fixed;
  bottom: $footer-height-lg;
  margin 60px
  // above(1200px)
  //   margin 30px 80px

  p {
    text-transform: uppercase;
    font-weight: 600;
    line-height: 1;
    padding: 0;
    margin: 0;
  }

  .home__teaser-text {
    font-size: calc(3vw + 15px)
    margin-bottom: 50px;
  }

  .home__hackathon-name {
    font-size: 9vw;
    color: $fancy-font-blue;
  }

  /* screen width is more than double the height */
  @media screen and (min-aspect-ratio: 5 / 2) {
    .home__teaser-text {
      font-size: 2vw
    }

    .home__hackathon-name {
      font-size: 7vw;
    }
  }

  @media screen and (min-aspect-ratio: 7 / 2) {
    .home__teaser-text {
      font-size: 1.5vw
    }

    .home__hackathon-name {
      font-size: 5vw;
    }
  }

  @media screen and (min-aspect-ratio: 9 / 2) {
    .home__teaser-text {
      font-size: 1.2vw
    }

    .home__hackathon-name {
      font-size: 4vw;
    }
  }
}