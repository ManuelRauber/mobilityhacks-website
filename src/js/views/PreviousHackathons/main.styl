$tileWidth = 478px
$tileHeight = 358px
$singleImageBreakpoint = 580px

.previous-hackathons__tiles
  margin-bottom 100px

.tile
  margin 3px
  width $tileWidth
  height $tileHeight
  a, br
    font-size 46px

.tile--two-times
  //width 2 * $tileWidth
  //height $tileHeight
  text-overflow ellipsis
  overflow visible
  .tile__text
    width 2 * $tileWidth

.tile__text
  padding 18px 20px
  font-size 54px
  font-weight bold
  line-height 1.2
  word-spacing: -0.3em;
  letter-spacing -0.01em
  text-transform uppercase

@media screen and (max-width: $singleImageBreakpoint)
  .tile__text
    font-size 48px
    width $tileWidth
    height 2 * $tileHeight
    text-overflow clip

  .tile, .tile__text, .tile__image, .tile--two-times
    width 90vw