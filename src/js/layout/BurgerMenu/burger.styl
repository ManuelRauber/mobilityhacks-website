@import "../../../css/settings.styl"

.burger-menu-button
  z-index 100
  position fixed
  bottom 0
  left 0
  padding 16px
  img
    width 48px
    height 48px

.offCanvasMenu
  z-index 50
  display: flex
  flex-direction: column
  vertical-align bottom
  position absolute
  top 0
  width 100%
  height 100%
  background #444444
  visibility hidden
  opacity 0.0
  border-box()
  transition(all ease-out 500ms);

  &.visible
    visibility visible
    opacity 1.0
    transition(opacity ease 400ms);

  .offCanvasMenu__container-top
    flex 4
    width 100%
  .offCanvasMenu__container-content
    flex 5
    width 100%
  .offCanvasMenu__container-bottom
    flex 2
    width 100%

  a
    display block
    text-align right
    padding 15px
    color #fff
    text-transform uppercase
    font-size 6vw

    &.link--active
      text-decoration underline

